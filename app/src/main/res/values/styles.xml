<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ContactName" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:textColor">@color/user_details_name</item>
    </style>

    <style name="ContactDetails" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/user_details_name</item>
    </style>

    <style name="ContactDetailsLabel" parent="ContactDetails">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

</resources>
